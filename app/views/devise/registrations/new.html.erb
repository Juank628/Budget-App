<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "mobile-form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", class: "mobile-field" %>
  </div>

  <hr class="separator-line">

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "mobile-field" %>
  </div>

  <hr class="separator-line">

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "mobile-field" %>
  </div>

  <hr class="separator-line">

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "mobile-field" %>
  </div>

  <hr class="separator-line">

  <div class="actions">
    <%= f.submit "Sign up", class: "mobile-button-blue" %>
  </div>
<% end %>
