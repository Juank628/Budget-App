<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "mobile-form"}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mobile-field" %>
  </div>

  <hr class="separator-line">

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "mobile-field" %>
  </div>

  <hr class="separator-line">

  <div class="actions">
    <%= f.submit "Log in", class: "mobile-button-blue" %>
  </div>
<% end %>
