<h1>New Category</h1>
<%= form_with model: @group, url: groups_path do |form| %>
    <div class="form">
        <div class="form-group">
            <%= form.text_field :name, required: true, class: "mobile-field", placeholder: "Category name" %>
        </div>
        <div class="form-group">
            <%= form.text_field :icon, required: true, class: "mobile-field", placeholder: "Icon" %>
        </div>

        <%= form.submit "Add Category", class: "mobile-button-blue" %>
    </div>
<% end %>